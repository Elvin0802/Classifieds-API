{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "Default": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=ClassifiedsAppDb;Trusted_Connection=True"
  },

  "JWT": {
    "Secret": "e307a98ab9eb40b0a03190c112d53284",
    "Issuer": "http://localhost:5097",
    "Audience": "http://localhost:5097",
    "Expiration": 5
  },

  "Cloudinary": {
    "CloudName": "your_cloud_name",
    "ApiKey": "your_api_key",
    "ApiSecret": "your_api_secret"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Seq", "Serilog.Sinks.MSSqlServer" ],

    "MinimumLevel": "Information",

    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      },

      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      },

      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=ClassifiedsAppDb;Trusted_Connection=True",
          "tableName": "Logs",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "message": {
              "columnName": "Message",
              "allowNull": false
            },
            "level": {
              "columnName": "Level",
              "allowNull": false
            },
            "timestamp": {
              "columnName": "Timestamp",
              "allowNull": false
            },
            "UserId": {
              "columnName": "UserId",
              "allowNull": true
            },
            "Username": {
              "columnName": "Username",
              "allowNull": true
            }
          }
        }
      }
    ],

    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],

    "Properties": {
      "Application": "ClassifiedsApp.API"
    }
  }
}